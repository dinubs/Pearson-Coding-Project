
div#particles-js data-count=@node_count
div.vertAlign
    h3.white.text-center
       	' Search over 
		=' human_num(@count)
    	| Articles
    = form_tag search_path, :class => "form-horizontal", :method => 'get' do
  		.home-form-wrap
	  		= text_field_tag :search, params[:search], :class => "form-control", :placeholder => "Search all articles"
	      	= submit_tag "Search", :name => nil, :class=>"btn btn-success btn-md home-submit"
    .row
	    .col-xs-12
		    p.white.text-center
		    	=' link_to "About Cabretio", about_path
				' |
				=' link_to "Articles", articles_path
				' |
				=' link_to "Feeling Stressed", relax_path

javascript:
	particlesJS('particles-js', {
	  particles: {
	    color: '#fff',
	    shape: 'circle', // "circle", "edge" or "triangle"
	    opacity: 0.75,
	    size: 2,
	    size_random: true,
	    nb: $('#particles-js').data('count'),
	    anim: {
	      enable: true,
	      speed: 0.5
	    }
	  },
	  interactivity: {
	    enable: true,
	    mouse: {
	      distance: 125
	    },
	    detect_on: 'canvas', // "canvas" or "window"
	    mode: 'grab',
	    line_linked: {
	      enable_auto: true,
	      distance: 100,
	      color: '#fff',
	      opacity: 1,
	      width: 1,
	      condensed_mode: {
	        enable: true,
	        rotateX: 600,
	        rotateY: 600
	      }
	    },
	    events: {
	      onclick: {
	        enable: false
	      }
	    }
	  },
	  /* Retina Display Support */
	  retina_detect: true
	});